<div class="container">

    <div class="view-blog pt-4">
        <div class="view-blog-heading">
            <img src="/images/{{blog.img}}" alt="">

           <div class="row d-flex align-items-center">
               <div class="col-lg-9 col-md-6">
                   <h1 class="view-blog-title">{{blog.title}}</h1>
               </div>
               <div class="col-lg-3 col-md-6"> <span class="name-info">author: {{blog.name}}</span></div>
           </div>

        </div>
        <p class="view-blog-content">{{blog.longDesc}}</p>

    </div>

    <div class="footer-info">
           {{> go-home}}

           <div class="footer-info-option">
               <a href="/form/edit/{{blog.id}}" class="btn__edit">Edit</a>
               <form method="POST" action="../{{blog.id}}?_method=DELETE"><button type="submit" class="btn__del">Delete</button></form>
           </div>
    </div>
 </div>

